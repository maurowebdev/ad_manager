<%= turbo_stream_from "ad_view_count_#{ad.id}" %>

<div id="<%= dom_id ad %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= ad.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= ad.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">View count:</strong>
    <%= render "view_count", ad: ad %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Images:</strong>
    <% ad.images.each do |image| %>
      <%= image_tag image, class: "w-full h-48 object-cover rounded-md" %>
    <% end %>
  </div>
</div>
